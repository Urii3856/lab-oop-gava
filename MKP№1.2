class RowAverage {
    public static void main(String[] args) {
        double[][] matrix = {
                {10.0, 5.5, 8.0, 12.5},
                {7.0, 15.0, 9.2, 4.8},
                {20.0, 10.0, 30.0, 40.0}
        };

        System.out.println("Розрахунок середнього арифметичного для кожного рядка:");

        for (int i = 0; i < matrix.length; i++) {
            double sum = 0.0;
            for (int j = 0; j < matrix[i].length; j++) {
                sum += matrix[i][j];
            }
            double average = sum / matrix[i].length;
            System.out.println("Рядок " + (i + 1) + ": " + average);
        }
    }
}
