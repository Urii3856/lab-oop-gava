import java.util.Scanner;

// Абстрактний клас
abstract class Shape {
    public abstract double getArea(); // площа
    public abstract double getPerimeter(); // периметр (додатковий метод)
}

// Клас Прямокутник
class Rectangle extends Shape {
    private double a; // довжина
    private double b; // ширина

    public Rectangle(double a, double b) {
        this.a = a;
        this.b = b;
    }

    @Override
    public double getArea() {
        return a * b;
    }

    @Override
    public double getPerimeter() {
        return 2 * (a + b);
    }
}

// Клас Прямокутний трикутник
class Triangle extends Shape {
    private double c; // катет
    private double d; // катет

    public Triangle(double c, double d) {
        this.c = c;
        this.d = d;
    }

    @Override
    public double getArea() {
        return 0.5 * c * d;
    }

    @Override
    public double getPerimeter() {
        return c + d + getHypotenuse();
    }

    // Додатковий метод: гіпотенуза
    public double getHypotenuse() {
        return Math.sqrt(c * c + d * d);
    }
}

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Прямокутник
        System.out.print("Введіть довжину прямокутника (a): ");
        double a = sc.nextDouble();
        System.out.print("Введіть ширину прямокутника (b): ");
        double b = sc.nextDouble();

        Shape rect = new Rectangle(a, b);

        // Трикутник
        System.out.print("Введіть катет c прямокутного трикутника: ");
        double c = sc.nextDouble();
        System.out.print("Введіть катет d прямокутного трикутника: ");
        double d = sc.nextDouble();

        Triangle tri = new Triangle(c, d); // зберігаю як Triangle, щоб використати getHypotenuse()

        // Вивід результатів
        System.out.println("\n=== РЕЗУЛЬТАТИ (Абстрактний клас) ===");
        System.out.println("Площа прямокутника: " + rect.getArea());
        System.out.println("Периметр прямокутника: " + rect.getPerimeter());

        System.out.println("Площа трикутника: " + tri.getArea());
        System.out.println("Периметр трикутника: " + tri.getPerimeter());
        System.out.println("Гіпотенуза трикутника: " + tri.getHypotenuse());

        sc.close();
    }
}
