import java.util.Scanner;

// Інтерфейс
interface ShapeI {
    double getArea();
    double getPerimeter();
}

// Прямокутник
class RectangleI implements ShapeI {
    private double a, b;

    public RectangleI(double a, double b) {
        this.a = a;
        this.b = b;
    }

    @Override
    public double getArea() {
        return a * b;
    }

    @Override
    public double getPerimeter() {
        return 2 * (a + b);
    }
}

// Прямокутний трикутник
class TriangleI implements ShapeI {
    private double c, d;

    public TriangleI(double c, double d) {
        this.c = c;
        this.d = d;
    }

    @Override
    public double getArea() {
        return 0.5 * c * d;
    }

    @Override
    public double getPerimeter() {
        return c + d + getHypotenuse();
    }

    public double getHypotenuse() {
        return Math.sqrt(c * c + d * d);
    }
}

