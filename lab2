public class Main {
    public static void main(String[] args) {
        // 1. Символьний масив (назва закладу, інститут, група, спеціальність)
        char[] arr = "National Forestry University - Institute IKNT - Group IPZ-11 - Software Engineering".toCharArray();

        // 2. Створення рядка з масиву та видалення спеціальності
        String str1 = new String(arr);
        String specialty = " - Software Engineering";
        str1 = str1.replace(specialty, "");
        System.out.println("1-2) String 1 (без спеціальності): " + str1);

        // 3. Дзеркальний рядок
        String str2 = new StringBuilder(str1).reverse().toString();
        System.out.println("3) String 2 (дзеркальний): " + str2);

        // 4. Заміна на великі букви + порівняння
        String str3 = str1.toUpperCase();
        System.out.println("4) String 3 (великі букви): " + str3);
        System.out.println("str1 дорівнює str3? " + str1.equals(str3));

        // 5. Вибрати інститут
        String institute = str1.substring(str1.indexOf("Institute"), str1.indexOf("Institute") + "Institute IKNT".length());
        System.out.println("5) Інститут: " + institute);

        // 6. Об’єднання str1 і str3
        String str4 = str1 + " " + str3;
        System.out.println("6) String 4 (об’єднаний): " + str4);

        // 7. Індекс першого та останнього входження букви "i"
        int firstIndex = str1.indexOf('i');
        int lastIndex = str1.lastIndexOf('i');
        System.out.println("7) Перша 'i': " + firstIndex + ", остання 'i': " + lastIndex);

        // 8. StringBuffer з ПІБ та датою
        String surname = "Lazarenko";
        String name = "Yurii";
        String patronymic = "Olegovych";
        String day = "28";
        String month = "08";
        String year = "2007";
        StringBuffer sb = new StringBuffer(surname + " " + name + " " + patronymic + " " + day + " " + month + " " + year);
        System.out.println("8) StringBuffer: " + sb);

        // 9. Видалити число і місяць
        int start = sb.indexOf(day);
        sb.delete(start, start + day.length() + 1 + month.length()); // видаляємо день і місяць
        System.out.println("9) Без числа і місяця: " + sb);

        // 10. Додати місце народження
        sb.append(" Beryslav ");
        System.out.println("10) Додано місце народження: " + sb);

        // 11. Вставити стать після року
        sb.insert(sb.indexOf(year) + year.length(), " Male");
        System.out.println("11) Додано стать: " + sb);

        // 12. Довжина рядка
        System.out.println("12) Довжина у символах: " + sb.length());
        System.out.println("    Довжина у байтах: " + sb.toString().getBytes().length);

        // 13. Скорочений рядок (залишити тільки ПІБ)
        String shortStr = surname + " " + name + " " + patronymic;
        System.out.println("13) Скорочений рядок (ПІБ): " + shortStr);

        // 14. Дзеркальне відображення прізвища
        String reversedSurname = new StringBuilder(surname).reverse().toString();
        System.out.println("14) Дзеркальне прізвище: " + reversedSurname);
    }
}
